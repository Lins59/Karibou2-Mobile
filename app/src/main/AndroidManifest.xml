<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.telnet.karibou"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <!-- Flashmail provider -->
        <provider
            android:name="com.telnet.sync.FlashmailsContentProvider"
            android:authorities="com.telnet.karibou.provider"
            android:exported="true"
            android:label="K² provider"
            android:syncable="true" />

        <!-- Authenticator related activity -->
        <activity
            android:name="com.telnet.authentication.AuthenticatorActivity"
            android:label="Karibou²" />

        <!-- Authenticator related service -->
        <service android:name="com.telnet.authentication.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- Sync related service -->
        <service
            android:name="com.telnet.sync.FlashmailSyncService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter" />
        </service>

